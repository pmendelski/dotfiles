[commit]
  gpgsign = true

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[url "git@github.com:pmendelski/"]
  insteadOf = git://github.com/pmendelski/

